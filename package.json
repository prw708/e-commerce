{
  "name": "e-commerce",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "b2": "vue-cli-service build --target lib --name ECommerce ./src/App.vue",
    "AllListings": "vue-cli-service build --target lib --name AllListings ./src/components/AllListings.vue",
    "AddProduct": "vue-cli-service build --target lib --name AddProduct ./src/components/AddProduct.vue",
    "Orders": "vue-cli-service build --target lib --name Orders ./src/components/Orders.vue",
    "Category": "vue-cli-service build --target lib --name Category ./src/components/Category.vue",
    "Product": "vue-cli-service build --target lib --name Product ./src/components/Product.vue",
    "NotFound": "vue-cli-service build --target lib --name NotFound ./src/components/NotFound.vue",
    "Checkout": "vue-cli-service build --target lib --name Checkout ./src/components/Checkout.vue",
    "Confirmation": "vue-cli-service build --target lib --name Confirmation ./src/components/Confirmation.vue"
  },
  "dependencies": {
    "big.js": "^6.2.1",
    "core-js": "^3.19.0",
    "vue": "^3.2.20",
    "vue-router": "^4.0.12",
    "webpack": "^5.75.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@vue/cli-plugin-babel": "^5.0.8",
    "@vue/cli-plugin-eslint": "^5.0.8",
    "@vue/cli-plugin-router": "^5.0.8",
    "@vue/cli-service": "^5.0.8",
    "@vue/compiler-sfc": "^3.2.20",
    "eslint": "^8.32.0",
    "eslint-plugin-vue": "^7.20.0",
    "pug": "^3.0.2",
    "pug-plain-loader": "^1.1.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "rules": {
      "no-extra-semi": "off",
      "no-cond-assign": "off",
      "no-undef": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
